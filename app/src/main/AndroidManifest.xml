<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.thuytran.listviewtutorial">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activity.first">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.RowListView">
        </activity>
        <activity android:name=".activity.Intro">
        </activity>
        <activity
                android:label="@string/test"
                android:name=".activity.MainActivity">
        </activity>
        <activity
                android:label="@string/scoreTable"
                android:name=".activity.CheckScoreHandle">
            android:windowSoftInputMode="adjustPan"
        </activity>
        <activity
                android:label="@string/score"
                android:name=".activity.ScoreTable">
        </activity>
        <!-- <activity android:name=".newgui.first"> -->
        <!-- </activity> -->
        <activity android:name=".activity.Welcome">
        </activity>
        <activity
                android:label="@string/job"
                android:name=".activity.Jobs">
        </activity>
        <activity android:name=".activity.ResultActivity">
        </activity>
    </application>

</manifest>