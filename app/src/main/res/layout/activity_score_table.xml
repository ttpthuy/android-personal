<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ScoreTable">

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGr"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lop 10"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/lop10"
        />
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lop 11"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/lop11"
        />
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lop 12"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/lop12"
        />
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dai hoc"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/daihoc"
        />
    </RadioGroup>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNextScore"
            android:text="Next"
            android:onClick="nextToScore"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGr" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.059"/>

    <TextView
            android:text="Giới tính"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="416dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.689"
            />

    <RadioGroup
            android:layout_width="189dp"
            android:layout_height="35dp"
            android:id="@+id/sexGroup"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.393"
            app:layout_constraintVertical_bias="0.139">

        <RadioButton
                android:text="Nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nam"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toStartOf="@+id/nu"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/radioGr"
                app:layout_constraintHorizontal_bias="0.322"
                app:layout_constraintVertical_bias="0.436"/>

        <RadioButton
                android:text="Nữ"
                android:layout_width="88dp"
                android:layout_height="22dp"
                android:id="@+id/nu"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="148dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.154"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="1.0"/>
    </RadioGroup>

</android.support.constraint.ConstraintLayout>